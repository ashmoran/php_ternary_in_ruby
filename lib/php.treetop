grammar PHP
  rule program
    nested_nested_ternary / nested_ternary / ternary / value
  end

  rule nested_nested_ternary
    condition:nested_ternary _ "?" _ options:options <PHPTernary>
  end

  rule nested_ternary
    condition:ternary _ "?" _ options:options <PHPTernary>
  end

  rule ternary
    condition:value _ "?" _ options:options <PHPTernary>
  end

  rule options
    value_if_true:value _ ":" _ value_if_false:value
  end

  rule value
    boolean / string
  end

  rule boolean
    "TRUE" <PHPTrue>
    /
    "FALSE" <PHPFalse>
  end

  rule string
    '"' body:('\"' / !'"' .)* '"' <PHPString>
  end

  rule _
    [ ]*
  end
end